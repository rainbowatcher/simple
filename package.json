{
  "name": "simple",
  "type": "module",
  "version": "0.0.1-alpha.3",
  "private": true,
  "packageManager": "pnpm@9.4.0",
  "description": "simple your work.",
  "author": "rainbowatcher <rainbow-w@qq.com>",
  "license": "MIT",
  "scripts": {
    "dev": "pnpm --filter simple-server dev",
    "dev:web": "pnpm --filter simple-web dev",
    "debug": "pnpm dev -- --debug",
    "lint": "eslint .",
    "start": "nodemon dist/server.js",
    "build": "pnpm -r build",
    "build:native": "pnpm build && ncc build dist/server.cjs -m -o dist/native && pkg -t node18-macos dist/native/index.js",
    "release": "bumpp -r",
    "up": "taze -rI",
    "typecheck": "pnpm -r typecheck",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.3",
    "@rainbowatcher/eslint-config": "^0.10.2",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/node": "^20.14.9",
    "@types/validator": "^13.12.0",
    "@unocss/eslint-config": "^0.61.0",
    "bumpp": "^9.4.1",
    "cross-env": "^7.0.3",
    "eslint": "~8.57.0",
    "husky": "^9.0.11",
    "jiti": "^1.21.6",
    "ncc": "^0.3.6",
    "nodemon": "^3.1.4",
    "pkg": "^5.8.1",
    "rollup-plugin-visualizer": "^5.12.0",
    "taze": "^0.14.1",
    "typescript": "^5.5.3",
    "unocss": "^0.61.0",
    "validator": "^13.12.0",
    "vite": "5.3.2",
    "zod": "^3.23.8"
  }
}
