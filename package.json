{
  "name": "simple",
  "type": "module",
  "version": "0.0.1-alpha.3",
  "private": true,
  "packageManager": "pnpm@8.10.5",
  "description": "simple your work.",
  "author": "rainbowatcher <rainbow-w@qq.com>",
  "license": "MIT",
  "scripts": {
    "dev": "pnpm --filter simple-server dev",
    "dev:web": "pnpm --filter simple-web dev",
    "debug": "pnpm dev -- --debug",
    "lint": "eslint .",
    "start": "nodemon dist/server.js",
    "build": "pnpm -r build",
    "build:native": "pnpm build && ncc build dist/server.cjs -m -o dist/native && pkg -t node18-macos dist/native/index.js",
    "release": "bumpp -r",
    "up": "taze -rI",
    "typecheck": "pnpm -r typecheck",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@rainbowatcher/eslint-config": "^0.3.3",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/node": "^20.9.4",
    "@types/validator": "^13.11.7",
    "@unocss/eslint-config": "^0.57.7",
    "bumpp": "^9.2.0",
    "cross-env": "^7.0.3",
    "eslint": "~8.54.0",
    "husky": "^8.0.3",
    "jiti": "^1.21.0",
    "ncc": "^0.3.6",
    "nodemon": "^3.0.1",
    "pkg": "^5.8.1",
    "rollup-plugin-visualizer": "^5.9.2",
    "taze": "^0.12.0",
    "typescript": "^5.3.2",
    "unocss": "^0.57.7",
    "validator": "^13.11.0",
    "vite": "4.5.0",
    "zod": "^3.22.4"
  }
}
